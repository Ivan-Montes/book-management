<persistence xmlns="https://jakarta.ee/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="3.0">
    <persistence-unit name="persistence-unit-book-mgmt">        
        <description>Hibernate Reactive configuration</description>
        <provider>org.hibernate.reactive.provider.ReactivePersistenceProvider</provider>
		<class>dev.ime.infrastructure.entity.AuthorJpaEntity</class>
		<class>dev.ime.infrastructure.entity.BookBookshopJpaEntity</class>
		<class>dev.ime.infrastructure.entity.BookBookshopId</class>
		<class>dev.ime.infrastructure.entity.BookJpaEntity</class>
		<class>dev.ime.infrastructure.entity.BookshopJpaEntity</class>
		<class>dev.ime.infrastructure.entity.GenreJpaEntity</class>
		<class>dev.ime.infrastructure.entity.PublisherJpaEntity</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
       
            <property name="jakarta.persistence.jdbc.driver" value="" />
            <property name="jakarta.persistence.jdbc.url" value="" />
            <property name="jakarta.persistence.jdbc.user" value="" />
            <property name="jakarta.persistence.jdbc.password" value="" />             

            <!-- The Vert.x SQL Client connection pool size -->
            <property name="hibernate.connection.pool_size" value="10"/>

            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.highlight_sql" value="true"/>
            
        </properties>
    </persistence-unit>
</persistence>